#
# Robots file
#

robots-path: /robots.txt



#
# Parsing rules
#

agent: *
parse-robots: ^\s*(Allow|Disallow|User-agent)\s*:\s*(.+)$
parse-end-of-robots-blocks: \s*

parse-uri: (?:(\w+)://)?([^/:?#]+)(?::(\d+))?([^?#]*)?(\?[^#]*)?(#.*)?



#
# Rule names.
# Theses should be lower case
#

user-agent: user-agent
disallow: disallow
allow: allow
